<%- model_class = Item -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @item.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @item.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:details) %>:</strong></dt>
  <dd><%= @item.details %></dd>
  <dt><strong><%= model_class.human_attribute_name(:qty_current) %>:</strong></dt>
  <dd><%= @item.qty_current %></dd>
  <dt><strong><%= model_class.human_attribute_name(:qty_ideal) %>:</strong></dt>
  <dd><%= @item.qty_ideal %></dd>
  <dt><strong><%= model_class.human_attribute_name(:qty_sold) %>:</strong></dt>
  <dd><%= @item.qty_sold %></dd>
  <dt><strong><%= model_class.human_attribute_name(:avg_sales) %>:</strong></dt>
  <dd><%= @item.avg_sales %></dd>
  <dt><strong><%= model_class.human_attribute_name(:supplier) %>:</strong></dt>
  <dd><%= @item.supplier %></dd>
  <dt><strong><%= model_class.human_attribute_name(:exp_date) %>:</strong></dt>
  <dd><%= @item.exp_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pur_date) %>:</strong></dt>
  <dd><%= @item.pur_date %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              items_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_item_path(@item), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              item_path(@item),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
