<%- model_class = Item -%>
<div class="page-header">
  <h1>Current Stock</h1>
</div>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><b>Link</b></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:details) %></th>
      <th><b>Stock</b></th>
      <th><b>Sold</b></th>
      <th><b>Sales Avg</b></th>
      <th><%= model_class.human_attribute_name(:supplier) %></th>
      <th><b>Expiry</b></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to "View",
            item_path(item),
            :class => 'btn btn-mini btn-success' %></td>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= item.details %></td>
        <td><%= item.qty_current %></td>
        <td><%= item.qty_sold %></td>
        <td><%= item.avg_sales %></td>
        <td><%= item.supplier %></td>
        <td><%= item.exp_date %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_item_path(item), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      item_path(item),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br />
<%= link_to "Add New Item",
            new_item_path,
            :class => 'btn btn-primary' %>
