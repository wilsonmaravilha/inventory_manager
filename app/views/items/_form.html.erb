<%= form_for @item, :html => { :class => 'form-horizontal' } do |f| %>
  <% val = nil %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <% val = @item.name %>
      <% val ||= 0 %>
      <%= f.text_field :name, :class => 'text_field form-control', :value => val %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :price, :class => 'control-label' %>
    <div class="controls">
      <% val = @item.price %>
      <% val ||= 0 %>
      <%= f.text_field :price, :class => 'text_field', :value => val %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :details, :class => 'control-label' %>
    <div class="controls">
      <% val = @item.details %>
      <% val ||= 0 %>
      <%= f.text_field :details, :class => 'text_field', :value => val %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :qty_current, :class => 'control-label' %>
    <div class="controls">
      <% val = @item.qty_current %>
      <% val ||= 0 %>
      <%= f.text_field :qty_current, :class => 'text_field', :value => val%>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :qty_ideal, :class => 'control-label' %>
    <div class="controls">
      <% val = @item.qty_ideal %>
      <% val ||= 0 %>
      <%= f.text_field :qty_ideal, :class => 'text_field', :value => val %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :qty_sold, :class => 'control-label' %>
    <div class="controls">
      <% val = @item.qty_sold %>
      <% val ||= 0 %>
      <%= f.text_field :qty_sold, :class => 'text_field', :value => val %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :avg_sales, :class => 'control-label' %>
    <div class="controls">
      <% val = @item.avg_sales %>
      <% val ||= 0 %>
      <%= f.text_field :avg_sales, :class => 'text_field', :value => val %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :supplier, :class => 'control-label' %>
    <div class="controls">
      <% val = @item.supplier %>
      <% val ||= 0 %>
      <%= f.text_field :supplier, :class => 'text_field', :value => val %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :exp_date, :class => 'control-label' %>
    <div class="controls">
      <% val = @item.exp_date %>
      <% val ||= Date.today + 30.days %>
      <%= f.text_field :exp_date, :class => 'text_field', :value => val %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :pur_date, :class => 'control-label' %>
    <div class="controls">
      <% val = @item.pur_date %>
      <% val ||= Date.today %>
      <%= f.text_field :pur_date, :class => 'text_field', :value => val %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                items_path, :class => 'btn' %>
  </div>
<% end %>
